<% let date = new Date(); %>

<div class="row">
  <div class="card">
    <div class="card-header d-flex justify-content-between">
      <div class="header-title">
        <h4 class="card-title">Activos</h4>
      </div>
    </div>
    <div class="card-body p-0">
