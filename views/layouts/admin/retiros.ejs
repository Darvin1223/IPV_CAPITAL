<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
               <div class="d-flex justify-content-between">
                  <div>
                     <span><b>Total disponible para retiro</b></span>
                     <div class="mt-2">
                        <h2 class="counter" style="visibility: visible;">$<%= retiros_totales['total_retiros'] %></h2>
                     </div>
                  </div>
                  <div>
                     <span class="badge bg-primary">Total</span>
                  </div>
               </div>
               <div class="d-flex justify-content-between mt-2">
                  <div>
                     <span>Dinero total para retiro</span>
                  </div>

               </div>

            </div>
         </div>
    </div>

</div>
<div class="row">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
          <div class="header-title">
            <h4 class="card-title">Retiros pendientes</h4>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive mt-4">
            <table id="basic-table" class="table table-striped mb-0" role="grid">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Cantidad</th>
                  <th>Tipo de cuenta</th>
                  <th>Billetera</th>
                  <th>Acciones</th>
                </tr>
              </thead>

              <tbody>

              <% data_retiros_pendientes.forEach(function(item) { %>

                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <h6><%= item.nombre %> <%= item.apellido %></h6>
                    </div>
                  </td>

                  <td><%= item.email %></td>
                  <td><div class="text-success">$<%= item.monto %></div></td>
                  <td class="text-center">
                      <span class="badge rounded-pill bg-info">Billetera virtual</span>
                    </td>
                 <td>
                   <%= item.haash_wallet %>
                 </td>
                 <td>
                   <a class="btn btn-primary" href="/admin/retiros/aceptar/<%= item.id_solicitud_retiro %>" name="button">Aceptar Retiro</a>
                   <a class="btn btn-danger" href="/admin/retiros/rechazar/<%= item.id_solicitud_retiro %>" name="button">Rechazar Retiro</a>
                 </td>

                </tr>

                <% }) %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
</div>




<div class="row">
    <div class="col-sm-12">
        <div class="card">
           <div class="card-header d-flex justify-content-between">
              <div class="header-title">
                 <h4 class="card-title">Historial de deposito</h4>
              </div>
           </div>
           <div class="card-body">

              <div class="table-responsive">
                 <table  class="table table-striped" >
                    <thead>
                       <tr>
                          <th>Fecha</th>
                          <th>Monto</th>
                          <th>Moneda</th>
                          <th>Estado</th>
                          <th>hash/Numero de cuenta</th>
                          <th>Confirmado por:</th>

                       </tr>
                    </thead>
                    <tbody>

                      <% historial.forEach(function(item) { %>
                        <tr class="text-center">
                            <td><%= moment(item.fecha_retiro).startOf('day').fromNow() %></td>
                            <td>$<%= item.monto %></td>
                            <td>USDT,PESOS,USD</td>
                            <td><%= item.estado %></td>
                            <td><%= item.haash_wallet %></td>
                            <td><%= item.confirmado_por %></td>
                         </tr>
                      <% }) %>


                    </tbody>
                    <tfoot>
                       <tr>
                         <th>Fecha</th>
                         <th>Monto</th>
                         <th>Moneda</th>
                         <th>Estado</th>
                         <th>hash/Numero de cuenta</th>
                         <th>Confirmado por:</th>
                       </tr>
                    </tfoot>
                 </table>
              </div>
           </div>
        </div>
     </div>
</div>
